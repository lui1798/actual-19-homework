		<script src="/static/js/sweetalert.min.js"></script>

		<script>

			function deleteRecord(url) {
			    $.ajax({
					type:'DELETE',
					data:'',
					url:url,
					success:function(data){
						swal("删除！", "删除成功", "success");
					},
					dataType:'text',
					error:function (){
						swal("删除！", "删除失败。", "error");
					}
				})
			}

			$('.btnDelete').click( function () {
			    var pk = $(this).attr('data');
			    var url = "/assets/delete/"+pk + "/";
				swal({
				  title: "确定删除吗？",
				  text: "你确定删除该条记录吗？",
				  type: "warning",
				  showCancelButton: true,
				  confirmButtonColor: "#DD6B55",
				  confirmButtonText: "确定删除！",
				  cancelButtonText: "取消删除！",
				  closeOnConfirm: false,
				  closeOnCancel: false
				},
				function(isConfirm){
				  if (isConfirm) {
				      deleteRecord(url);

				  } else {
						swal("取消！", "取消成功", "error");
				  }
				});
			});

			$('#btnAddAsset').click( function () {
				var data = $("#myform").serialize();
				var url = "/assets/add/";
				console.log(url);
				$.post(url, data, function (retdata) {
					alert(retdata);
                })
            });

			$('.btnAssetEdit').click( function () {
                                var pk = $(this).attr('data')
				var url = "/assets/detail/?pk=" + pk;
				console.log(url);
				$.get(url, function (data) {
					console.log(data);
					$("#edit_hostname").val(data.hostname);
					$("#edit_private_ip").val(data.hostname);
					$("#edit_public_ip").val(data.hostname);
					$("#edit_hostname").val(data.hostname);
					$("#edit_hostname").val(data.hostname);
					$("#edit_hostname").val(data.hostname);
					$("#edit_hostname").val(data.hostname);
					$("#edit_hostname").val(data.hostname);
					$("#edit_hostname").val(data.hostname);
					$("#edit_hostname").val(data.hostname);
					$("#edit_hostname").val(data.hostname);





                })
            });


		</script>

